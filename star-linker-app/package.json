{
  "name": "star-linker",
  "version": "1.0.1",
  "description": "Star Linker - 우주 탐험 퍼즐 게임. 레이저로 숨겨진 행성을 찾는 논리 퍼즐 게임입니다.",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -o",
    "dev": "npx live-server --port=3000 --open=/",
    "build": "echo 'Static files ready for deployment'",
    "deploy": "gh-pages -d .",
    "copy-web": "cp ../index.html ../script.js ../style.css www/",
    "sync": "npm run copy-web && npx cap sync",
    "sync-android": "npm run copy-web && npx cap sync android",
    "open-android": "npx cap open android",
    "build-android": "npm run sync-android && cd android && ./gradlew assembleDebug",
    "build-android-release": "npm run sync-android && cd android && ./gradlew assembleRelease"
  },
  "keywords": [
    "game",
    "puzzle",
    "space",
    "laser",
    "planets",
    "logic",
    "star-linker",
    "korean"
  ],
  "author": "Star Linker Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wjdtjq1121/orapa-space.git"
  },
  "homepage": "https://wjdtjq1121.github.io/orapa-space/",
  "devDependencies": {
    "gh-pages": "^6.1.0",
    "http-server": "^14.1.1",
    "live-server": "^1.2.2"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/ios": "^6.0.0"
  }
}
